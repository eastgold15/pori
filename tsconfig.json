{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"declaration": true,
		"lib": ["ESNext", "dom", "dom.iterable"],
		"types": ["bun-types"],
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
